# Production Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://onya_prod:${PRODUCTION_DB_PASSWORD}@production-postgres:5432/onya_production

# Redis
REDIS_URL=redis://production-redis:6379

# JWT
JWT_SECRET=${PRODUCTION_JWT_SECRET}
JWT_REFRESH_SECRET=${PRODUCTION_JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Service Communication
SERVICE_TOKEN=${PRODUCTION_SERVICE_TOKEN}

# LLM Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=${PRODUCTION_OPENAI_API_KEY}
OPENAI_MODEL=gpt-4

# Monitoring
METRICS_ENABLED=true
TRACE_SAMPLING_RATE=0.1

# CORS
CORS_ORIGIN=https://onya.com,https://app.onya.com

# External Services
GRAFANA_API_KEY=${PRODUCTION_GRAFANA_API_KEY}
SLACK_WEBHOOK_URL=${PRODUCTION_SLACK_WEBHOOK_URL}

# Security
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX=100