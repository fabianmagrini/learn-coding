{
  "name": "onya-chatbot",
  "version": "1.0.0",
  "description": "Production-grade customer service chatbot with human escalation",
  "private": true,
  "workspaces": [
    "apps/*",
    "bffs/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:shared-services\" \"npm run dev:customer-bff\" \"npm run dev:customer-app\"",
    "dev:backend": "concurrently \"npm run dev:shared-services\" \"npm run dev:customer-bff\"",
    "dev:customer": "concurrently \"npm run dev:shared-services\" \"npm run dev:customer-bff\" \"npm run dev:customer-app\"",
    "dev:shared-services": "npm run dev --workspace=services/shared-services",
    "dev:customer-bff": "npm run dev --workspace=bffs/customer-bff",
    "dev:operator-bff": "npm run dev --workspace=bffs/operator-bff",
    "dev:customer-app": "npm run dev --workspace=apps/customer-app",
    "dev:operator-app": "npm run dev --workspace=apps/operator-app",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:integration": "vitest run --config=vitest.integration.config.ts",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}