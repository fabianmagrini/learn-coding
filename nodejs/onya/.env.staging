# Staging Environment Configuration
NODE_ENV=staging
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://onya_staging:${STAGING_DB_PASSWORD}@staging-postgres:5432/onya_staging

# Redis
REDIS_URL=redis://staging-redis:6379

# JWT
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_REFRESH_SECRET=${STAGING_JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Service Communication
SERVICE_TOKEN=${STAGING_SERVICE_TOKEN}

# LLM Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}
OPENAI_MODEL=gpt-3.5-turbo

# Monitoring
METRICS_ENABLED=true
TRACE_SAMPLING_RATE=1.0

# CORS
CORS_ORIGIN=https://staging.onya.com,https://staging-app.onya.com

# External Services
GRAFANA_API_KEY=${STAGING_GRAFANA_API_KEY}
SLACK_WEBHOOK_URL=${STAGING_SLACK_WEBHOOK_URL}